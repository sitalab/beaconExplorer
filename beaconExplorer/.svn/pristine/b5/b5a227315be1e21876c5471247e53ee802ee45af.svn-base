package aero.developer.beacons.beaconglass.utils;

import aero.developer.beacons.beaconglass.R;
import android.content.Context;

public class AppStatics {
	public static String api_KEY_NAME;
	public static String api_KEY_VALUE;

	public static String airline;
	public static int api_TIME_OUT;
	public static String AirportURL;
	public static String beaconsUrl;
	public static String BeaconDetails;
	public static String appId;
	public static String RanginInterval;
	
	

	public AppStatics(Context context) {
		if (context != null) {

			api_KEY_NAME = context.getString(R.string.api_KEY_NAME);
			api_KEY_VALUE = context.getString(R.string.api_KEY_VALUE);
			api_TIME_OUT = context.getResources().getInteger(
					R.integer.api_TIME_OUT);
			AirportURL= context.getString(R.string.AirportURL);
			beaconsUrl= context.getString(R.string.beaconsUrl);
			BeaconDetails= context.getString(R.string.BeaconDetails);
			appId= context.getString(R.string.appId);
			RanginInterval= context.getString(R.string.RanginInterval);
			
		}
	}

	public static String getApi_KEY_NAME() {
		return api_KEY_NAME;
	}

	public static void setApi_KEY_NAME(String api_KEY_NAME) {
		AppStatics.api_KEY_NAME = api_KEY_NAME;
	}

	public static String getApi_KEY_VALUE() {
		return api_KEY_VALUE;
	}

	public static void setApi_KEY_VALUE(String api_KEY_VALUE) {
		AppStatics.api_KEY_VALUE = api_KEY_VALUE;
	}

	public static String getAirline() {
		return airline;
	}

	public static void setAirline(String airline) {
		AppStatics.airline = airline;
	}


	public static int getApi_TIME_OUT() {
		return api_TIME_OUT;
	}

	public static void setApi_TIME_OUT(int api_TIME_OUT) {
		AppStatics.api_TIME_OUT = api_TIME_OUT;
	}

	public static String getAirportURL() {
		return AirportURL;
	}

	public static void setAirportURL(String airportURL) {
		AirportURL = airportURL;
	}

	public static String getBeaconsUrl() {
		return beaconsUrl;
	}

	public static void setBeaconsUrl(String beaconsUrl) {
		AppStatics.beaconsUrl = beaconsUrl;
	}

	public static String getBeaconDetails() {
		return BeaconDetails;
	}

	public static void setBeaconDetails(String beaconDetails) {
		BeaconDetails = beaconDetails;
	}

	public static String getAppId() {
		return appId;
	}

	public static void setAppId(String appId) {
		AppStatics.appId = appId;
	}

	public static String getRanginInterval() {
		return RanginInterval;
	}

	public static void setRanginInterval(String ranginInterval) {
		RanginInterval = ranginInterval;
	}


}
